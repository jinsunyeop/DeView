<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    

<mapper namespace="deviewDao">

	<select id="selectDeview" parameterType="int" resultType="deviewDto">
		SELECT * FROM DEVIEW WHERE user_id=#{userId}; <!-- 이름을 입력 받아서 유저 테이블에 그 이름을 가진 유저 아이디를 받아 검색할 수 있도록 만드셈 -->
	</select>
	
	<select id="deviewAllList" resultType="deviewDto"> <!-- resultType은 result가 리스트로 반환되는데 리스트를 articleDto 객체로 반환된다는 뜻 -->
		SELECT * FROM DEVIEW ORDER BY deview_id;
	</select>
	
	<select id="countDeview" resultType="int"> 
   		 SELECT COUNT(*) FROM DEVIEW;
	</select>

	<insert id="insertDeview" parameterType="deviewDto">
			INSERT INTO DEVIEW(user_id,title,content,career,contact,number,price
			VALUES (#{userId},,#{title}#{content},#{career},#{contact},#{number},#{price})
<!-- 	 		<selectKey keyProperty="id" resultType="Long">
				SELECT IFNULL(MAX(ID),0)+1 FROM member  oracle사용 경우 SELECT NVL(MAX(id),0) FROM member
			</selectKey>   -->
	</insert>

</mapper>